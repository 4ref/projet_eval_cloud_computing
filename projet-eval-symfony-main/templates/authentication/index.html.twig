{% extends 'base.html.twig' %}

{% block title %}Hello AuthenticationController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 0 auto;
            font: 18px/1.5 sans-serif;
            position: absolute;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }

        label {
            display: flex;
            flex-direction: column;
            font-weight: bold;
            font-size: 2rem;
        }

        input {
            padding: 0.5em;
            margin: 0.1em;
            border: 3px solid #729e87;
            border-radius: 19px;
            width: 100%;
        }

        .authentication_btn {
            width: 100%;
            margin-top: 1em;
            padding: 0.4em;
            background-color: #729e87;
            border-radius: 10px;
            color: white;
        }
    </style>

    <div class="example-wrapper bg-blue-50 w-screen h-screen">
        {# title #}
        <div class="font-bold text-center text-7xl p-12">
            <h1 class="text-7xl font-bold">Connectez vous</h1>
        </div>

        {# new account #}
        <div class="pb-5">
            <a href={{ path('signup') }}>
                <p class="underline text-center text-green-500">Vous n'avez pas de compte? Créér un ici.</p>
            </a>
        </div>

        {# form #}
        <div class="flex flex-col w-[50%]
        m-auto p-16 shadow-xl
        bg-white rounded-xl">

            <form action="{{ path('connexion') }}" method="post">
                <label for="username">Pseudo:</label>
                <input type="text" id="username" name="_username" value="{{ last_username  }}">

                <label for="password">Password:</label>
                <input type="password" id="password" name="_password">

                {# To control the URL the user is redirected to on success #}
                <input type="hidden" name="_target_path" value="/profile">

                <button type="submit" class="authentication_btn">Connexion</button>
            </form>
        </div>

    </div>
{% endblock %}
